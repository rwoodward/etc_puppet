IF EXISTS(select * from sys.databases where name='<%= @jackrabbit_db %>')
  BEGIN
    ALTER DATABASE [<%= @jackrabbit_db %>] SET SINGLE_USER WITH ROLLBACK IMMEDIATE;
    DROP DATABASE <%= @jackrabbit_db %>;
  END
CREATE DATABASE [<%= @jackrabbit_db %>];

